<UserControl x:Class="_3C4_TP2.UserControlPartyCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3C4_TP2"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="220">
    <WrapPanel Background="White">
        <Button x:Name="ButtonClassPrevious" >⬅️</Button>

        <Image x:Name="ImagePortrait" Height="64" Width="64" Margin="0 0 10 0" />

        <StackPanel>
            <TextBox x:Name="TextBoxName" FontWeight="ExtraBold">Name</TextBox>

            <WrapPanel Margin="0 10">

                <StackPanel Margin="0 0 10 0">
                    <TextBlock x:Name="TextBlockHP">HP : 999</TextBlock>
                    <TextBlock x:Name="TextBlockMP">MP : 999</TextBlock>
                </StackPanel>

                <StackPanel Margin="0 0 10 0">
                    <TextBlock x:Name="TextBlockAttack">ATK : 999</TextBlock>
                    <TextBlock x:Name="TextBlockDefense">DEF : 999</TextBlock>
                </StackPanel>
            </WrapPanel>
        </StackPanel>

        <Button x:Name="ButtonClassNext">🠮</Button>
    </WrapPanel>
</UserControl>
